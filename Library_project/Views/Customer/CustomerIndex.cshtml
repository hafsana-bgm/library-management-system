<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book Sell Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container my-4">
        <!-- Top Section -->
        <div class="row mb-4">
            <!-- Customer Details -->
            <div class="col-md-6 border p-3">
                <h5 class="border-bottom pb-2 mb-3">Customer Details</h5>
                <div class="mb-3">
                    <label class="form-label">Phone*</label>
                    <input type="number" id="memberphone" class="form-control" placeholder="Enter Phone Number">
                </div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="memberName" placeholder="Enter Customer Name">
                    <div id="suggestion">

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" placeholder="Enter Address">
                </div>
            </div>

            <!-- Invoice Details -->
            <div class="col-md-6 border p-3">
                <h5 class="border-bottom pb-2 mb-3">Invoice Details</h5>
                <div class="mb-3">
                    <label class="form-label">Invoice ID</label>
                    <input type="text" class="form-control" >
                </div>
                <div class="mb-3">
                    <label class="form-label">Printed By</label>
                    <input type="text" class="form-control" placeholder="Enter Printer's Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control">
                </div>
            </div>
        </div>

        <!-- Invoice Items -->
        <div class="border p-3 mb-4">
            <h5 class="border-bottom pb-2 mb-3">Invoice Items</h5>
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Add Product Description">
                </div>
                <div class="col-md-1">
                    <input type="number" id="member" class="form-control" value="1">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="Unit Price">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="Discount %">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" value="0">
                </div>
                <div class="col-md-1">
                    <button class="btn btn-secondary w-100">Add</button>
                </div>
            </div>
        </div>

        <!-- Order List and Summary -->
        <div class="row">
            <div class="col-md-6 border p-3">
                <h5 class="border-bottom pb-2 mb-3">Order List</h5>
                <!-- Add table or content here -->
            </div>
            <div class="col-md-6 border p-3">
                <h5 class="border-bottom pb-2 mb-3">Order Summary</h5>
                <!-- Add totals and calculations here -->
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


@section scripts {
