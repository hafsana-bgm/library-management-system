@model Library_project.Viewww_model.Image_Class

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Member Index";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Book Information</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="SubmitBook_information" asp-controller="Book" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label >Book Name</label>
                <input type="text" class="form-control" id="Book_Name" name="Book_Name">
            </div>
            
            <div class="form-group">
                <label >Book Description</label>
                <input type="text" class="form-control" name="Book_Description" id="Book_Description">
            </div>
            
            <div class="form-group">
                <label >Book Price</label>
                <input type="number" class="form-control" name="Book_Price" id="Book_Price">
            </div>
            
            <div class="form-group">
                <label >Author</label>
                <input type="text" class="form-control" name="Author" id="Author">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="IsActive" id="IsActive">
                <label class="form-check-label" for="exampleCheck1">Available</label>
            </div>
            <div class="form-group">
                <label >Fine Amount</label>
                <input type="number" class="form-control" name="Book_Name" />
            </div>
            
            <div class="form-group">
                <label>picture</label>
                <input type="file" class="form-control" name="UploadImage" id="UploadImage" accept="image/*" />
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>