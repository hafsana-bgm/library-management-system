@model IEnumerable<Library_project.DataModel.Book>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Book List";
}

<!-- Default box -->
<div class="box">

	<div class="box-body">


		<div class="container my-5">

			<table class="table table-hover my-5">
				<thead class="table-info">
					<tr>
						<th>Serial</th>
						<th>Book Name </th>
						<th>Description </th>
						<th>WritterName</th>
						<th>Price</th>
						<th>Image</th>
						<th>IsActive</th>
						<th>Action</th>

					</tr>
				</thead>
				<tbody>

					@{
						int serial = 1;
						foreach (var data in Model)
						{
							<tr>
								<td>@serial</td>
								<td>@data.BookName</td>
								<td>@data.Description</td>
								<td>@data.WriterName</td>
								<td>@data.Price</td>
								<td><img src="~/BookImage/@data.Image " height="150px" width="120px"> </td>
								<td>@data.Isactive</td>
								<td>
									<a class="btn btn-warning" asp-route-id="@data.BookId" asp-action="BookEdit">Edit</a>
									<a class="btn btn-danger" asp-route-id="@data.BookId" asp-action="BookDelete">Delete</a>
								</td>

							</tr>
							serial++;
						}

					}


				</tbody>


			</table>


		</div>

	</div><!-- /.box-body -->
	<div class="box-footer">
		Footer
	</div><!-- /.box-footer-->
</div><!-- /.box -->
