@model Library_project.DataModel.Book

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Book Index";
}


<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Member Form</h3>
    </div>
    <form asp-action="BookIndex" asp-controller="Books">
        <div class="card-body">
            <div class="form-group">
                <label>Book Name</label>
                <input type="text" class="form-control" asp-for="BookName" placeholder="Name">
            </div>
            <div class="form-group">
                <label>Book Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
            </div>
            <div class="form-group">
                <label>Writer Name</label>
                <input type="text" class="form-control" asp-for="WriterName" placeholder="WriterName">
            </div>
        
            <div class="form-group">
                <label>Book Price </label>
                <input type="number" class="form-control" asp-for="Price" placeholder="Price">
            </div> 
            <div class="form-group">
                <label>Book Image </label>
                <input type="file" class="form-control" asp-for="Image" placeholder="Image">
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Isactive">
                <label>Active</label>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>

