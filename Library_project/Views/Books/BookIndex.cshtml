@model Library_project.ViewModel.BookVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Book Index";
}


<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Member Form</h3>
    </div>
    <form asp-action="BookIndex" asp-controller="Books" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Book Name</label>
                <input type="text" class="form-control" name="BookName" id="BookName">
            </div>
            <div class="form-group">
                <label>Book Description</label>
                <input type="text" class="form-control" name="Description" id="Description">
            </div>
            <div class="form-group">
                <label>Writer Name</label>
                <input type="text" class="form-control" Name="WriterName" id="WriterName">
            </div>
        
            <div class="form-group">
                <label>Book Price </label>
                <input type="number" class="form-control" Name="Price" id="Price">
            </div> 
            <div class="form-group">
                <label>Book Image </label>
                
                <input type="file" class="form-control" name="UploadImage" id="UploadImage" accept="image/*" />
            </div>
            <div class="form-group ">

                <label class="control-label" Name="BookLebelId">Lebels </label>
                <select class="form-control" >
                    <option value="">---Select Lebel---</option>

                    @foreach (var labels in ViewBag.Lebellist)
                    {
                        <option value="@labels.Value">@labels.Text</option>
                    }
                   
                </select>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="Isactive" Name="Isactive">
                <label>Active</label>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>

